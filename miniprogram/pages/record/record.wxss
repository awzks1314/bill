.tabWidth{
  width: 80rpx;
  text-align: center;
  position: relative;
  color: rgba(255, 255, 255, .7);
}
.selected{
  color: var(--white);
  font-weight: 800;
  font-size: 32rpx;
}
.selected::after { 
  content: ' ';
  width: 30rpx;
  height: 6rpx;
  border-radius: 4rpx;
  background-color: var(--white);
  position: absolute;
  bottom: -10rpx;
  left: 25rpx;
}


.twoBoxContent{
  position: relative;
  background-color: var(--ghostWhite);
  top: -80rpx;
  left: 0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.iconBox{
  /* height: 300rpx; */
  padding: 0 0 20rpx ;
}
.iconLi{
  width: 20%;
  height: 130rpx;
}

.iconfontBox {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.iconSelected {

  color: #fff;
}

.saveButton{
  position: fixed;
  width: calc(100% - 40rpx);
  bottom: 40rpx;
  bottom: calc(40rpx + constant(safe-area-inset-bottom));  
  bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.butt{
  border: 2rpx solid var(--green);
  color: var(--green);
  padding: 28rpx;
}

.butts{
  border: 2rpx solid var(--red);
  color: var(--red);
  padding: 28rpx;
}
.counterBox{
  background-color: var(--cyanLight);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  padding-bottom: 20rpx;  
  padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));  
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.numberLi{
  width: 159rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 36rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;
}
.numberLi:nth-child(4n) {
  margin-right: 0;
}